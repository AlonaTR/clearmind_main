{
    "builds": [
        {
            "src": "clearmind/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb", 
                "runtime": "python3.9"
            }
        },
        {
            "src": "reactapp/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "./build",
                "buildCommand": "npm install && npm run build"
            }
        }
    ],
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "clearmind/wsgi.py"
        }
    ],
    "build": {
        "env": {
            "CUSTOM_BUILD_COMMAND": "pip install -r requirements.txt && python manage.py collectstatic --no-input"
        }
    }
}
